<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardView.Title" parent="CardView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardView.Description" parent="CardView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="CardView.Director" parent="CardView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="CardView.Date" parent="CardView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Detail" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Detail.Description" parent="Detail">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="Detail.Asterisk" parent="Detail">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
